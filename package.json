{
  "name": "web",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon",
    "build:analyze": "ANALYZE=true next build && tsc --project tsconfig.server.json",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "next build && NODE_ENV=production ts-node --project tsconfig.server.json server.ts",
    "type-check": "tsc",
    "build:ant-css": "lessc --js static/styles/ant-overrides.less static/styles/ant.css",
    "build:tailwind-css": "tailwind build static/styles/tailwind.css -o static/styles/tailwind.css -c tailwind.config.js"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.0.3",
    "@sentry/browser": "^5.6.1",
    "@sentry/node": "^5.6.1",
    "@types/compression": "^1.0.0",
    "@zeit/next-css": "^1.0.1",
    "antd": "^3.21.2",
    "apollo-boost": "0.4.3",
    "apollo-cache": "^1.3.2",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.12",
    "apollo-link-ws": "^1.0.18",
    "apollo-utilities": "^1.3.2",
    "compression": "^1.7.4",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "next": "^9.0.3",
    "next-cookies": "^1.1.2",
    "next-images": "^1.1.2",
    "next-offline": "^4.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^3.0.0",
    "react-dom": "^16.9.0",
    "subscriptions-transport-ws": "^0.9.16",
    "webpack": "^4.39.1"
  },
  "author": "nirmalya.email@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/next": "^8.0.6",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.8.5",
    "autoprefixer": "^9.6.1",
    "cross-env": "^5.2.0",
    "husky": "^3.0.3",
    "lessc": "^1.0.2",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "tailwindcss": "^1.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
